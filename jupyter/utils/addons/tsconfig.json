{
  "compilerOptions": {
    "module": "EsNext",
    "moduleResolution": "node",

    "allowJs": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false
  }
}
